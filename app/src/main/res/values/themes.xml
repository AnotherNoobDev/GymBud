<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymBud" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/electric_indigo</item>
        <item name="colorPrimaryVariant">@color/deep_saffron</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verdigris</item>
        <item name="colorSecondaryVariant">@color/deep_saffron</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/maximum_blue_purple</item>
        <item name="android:textColor">@color/black</item>

        <item name="personalBestBackgroundColor">@color/sea_green</item>
        <item name="personalBestTextColor">@color/white</item>

        <item name="intensityWarmupColor">@color/cyber_yellow</item>
        <item name="intensityWorkingColor">@color/illuminating_emerald</item>
        <item name="intensityDefaultColor">?attr/colorOnPrimary</item>
    </style>
</resources>