<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ExerciseDetailFragment">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_margin="16dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name"/>

    <ImageView
        android:id="@+id/ic_target_muscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_target_muscle_24"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/target_muscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toTopOf="@id/ic_target_muscle"
        app:layout_constraintBottom_toBottomOf="@id/ic_target_muscle"
        app:layout_constraintStart_toEndOf="@id/ic_target_muscle"
        tools:text="Target muscle"/>

    <View
        android:id="@+id/divider_target_muscle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_target_muscle"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_equipment_24"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_target_muscle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toTopOf="@id/ic_equipment"
        app:layout_constraintBottom_toBottomOf="@id/ic_equipment"
        app:layout_constraintStart_toEndOf="@id/ic_equipment"
        tools:text="WEIGHT" />

    <View
        android:id="@+id/divider_equipment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_equipment"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notes_24"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_equipment"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="6"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:singleLine="false"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/ic_notes"
        app:layout_constraintTop_toTopOf="@id/ic_notes"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Notes" />

</androidx.constraintlayout.widget.ConstraintLayout>